{{#if success}}
{{!-- Decided to navigate back to Employee list page in case of success --}}
<div class="col s12 m6">
    <div class="card blue-grey darken-3">
        <div class="card-content white-text">
            <span class="card-title">Employee deleted successfully</span>
            <a class="waves-effect waves-light btn" href="/employee">Show Employee List</a>
        </div>
    </div>
</div>
{{else}}
<div class="col s12 m6">
    <div class="card blue-grey darken-1">
        <div class="card-content white-text">
            <span class="card-title">Server Error while deleting employee records</span>
            <div class="divider"></div>
            <p>{{err.message}}</p>
        </div>
        <div class="card-action">
            <a class="waves-effect waves-light btn" href="/employee">Show Employee List</a>
        </div>
    </div>
</div>

{{/if}}